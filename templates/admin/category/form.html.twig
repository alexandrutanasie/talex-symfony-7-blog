{% extends 'admin.html.twig' %}
{% block metaTitle %}Form category{% endblock %}
{% block title %}Form category{% endblock %}
{% block body %}
    {{ form_start(form) }}
        {{ form_errors(form) }}
        {{ form_row(form.title,  {
                'row_attr': {'class': 'form-group mb-3 col-lg-4'},
                'attr': {'class': 'form-control'},
                'label_attr': {'class': 'form-label'}
                }) }}
        {{ form_row(form.url,  {
                'row_attr': {'class': 'form-group mb-3 col-lg-4'},
                'attr': {'class': 'form-control'},
                'label_attr': {'class': 'form-label'}
                }) }}
        {{ form_row(form.body,  {
                'row_attr': {'class': 'form-group mb-3 col-lg-4'},
                'attr': {'class': 'form-control'},
                'label_attr': {'class': 'form-label'}
                }) }}   
        {{ form_row(form.status,  {
                'row_attr': {'class': 'form-group mb-3 col-lg-4'},
                'attr': {'class': 'form-check'},
                'label_attr': {'class': 'form-check-label'}
                }) }}                    
        
        <div class="form-group mb-3 col-lg-4"><button class="btn btn-success">{{ button_label|default('Save') }}</button></div>
    {{ form_end(form) }}

{% endblock %}    

